<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:id="@+id/buttonFragment"
                android:background="@drawable/black"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".counter.ButtonFragment">

    <Button
            android:id="@+id/btnStart"
            android:text="Start"
            android:onClick="btnClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_marginStart="15dp" android:layout_alignTop="@+id/btnStop"/>
    <Button
            android:id="@+id/btnRestart"
            android:text="Restart"
            android:onClick="btnClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_marginStart="151dp" android:layout_alignTop="@+id/btnStop" android:layout_marginTop="3dp"/>

    <Button
            android:id="@+id/btnStop"
            android:text="Stop"
            android:onClick="btnClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentEnd="true" android:layout_marginEnd="21dp"
            android:layout_alignParentBottom="true" android:layout_marginBottom="15dp"/>
</RelativeLayout>