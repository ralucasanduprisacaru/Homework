<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="@drawable/black"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        tools:context=".pdf_viewer.PdfViewer">

    <com.github.barteksc.pdfviewer.PDFView
            android:id="@+id/pdfViewer"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_margin="10dp"
            android:layout_height="400dp">
    </com.github.barteksc.pdfviewer.PDFView>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:text="Go Back"
                android:layout_gravity="right"
                android:onClick="goBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_marginBottom="39dp"
                android:layout_alignParentEnd="true" android:layout_marginEnd="14dp"/>

        <Button
                android:text="Click Me!"
                android:layout_gravity="left"
                android:onClick="clickMe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_alignParentStart="true"
                android:layout_marginStart="14dp" android:layout_alignParentTop="true"/>
    </RelativeLayout>


</LinearLayout>